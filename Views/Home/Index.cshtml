@{
    ViewBag.Title = "Home";
}

<style>
    .but1 {
        border-radius: 30px 0 0 30px;
    }
    .but2 {
        border-radius: 0 30px 30px 0;
    }
</style>

<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/Template/img/bgindex.jpg" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-end">
                        <div class="col-lg-6"></div>
                        <div class="col-lg-6">
                            <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Welcome to the Admission Portal</h5>
                            <h1 class="display-3 text-white animated slideInDown">Empowering Your Academic Journey Starts Here</h1>
                            <p class="fs-5 text-white mb-4 pb-2">This portal is designed to simplify your admission process. Whether you're a new applicant or returning student, everything you need is right at your fingertips.</p>
                            @Html.ActionLink("Register Now", "Register", "Home", new { @class = "btn btn-primary py-md-3 px-md-5 me-3 animated slideInDown" })


                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Carousel End -->
    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item text-center pt-3  h-100">
                        <div class="p-4">

                            <i class="fa-solid fa-star fa-3x  text-primary mb-4"></i>
                            <h5 class="mb-3">NAAC Accredited</h5>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="service-item text-center pt-3  h-100">
                        <div class="p-4">

                            <i class="fa-solid fa-person-chalkboard fa-3x text-primary mb-4"></i>
                            <h5 class="mb-3">Expert Faculty</h5>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="service-item text-center pt-3  h-100">
                        <div class="p-4">

                            <i class=" fa-3x fa-solid fa-headset text-primary mb-4"></i>
                            <h5 class="mb-3">Placement Support</h5>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                    <div class="service-item text-center pt-3 h-100">
                        <div class="p-4">
                            <i class="fa-3x fa-solid fa-money-check-dollar text-primary mb-4"></i>
                            <h5 class="mb-3">Scholarships & Financial Aid</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Service End -->

    <div class="container bg-light p-4 border border-primary">
        <div class="row ">

            <div class="col-lg-12 text-center wow fadeInUp">
                <img src="~/Template/img/cap.png" alt="" style="height: 50px; width: 80px; ">
                <h1 class="text-primary" style="display: inline; margin-top: 20px; margin-left: 5px;">Admission Open Now - Apply Now</h1>
                <p class="mt-2 fs-5 ">Start your academic journey with us and secure your future through quality education and equal opportunity.</p>

            </div>
            <div class="col-lg-5 wow fadeInUp">
                <img src="~/Template/img/admission.png" alt="" style="height: 400px; width:400px ;">
            </div>
            <div class="col-lg-7 wow fadeInUp">
                <h3 class="mt-3">Reservation Policy as per Government Norms:</h3>
                <p>We follow the reservation criteria for fair access to higher education:</p>
                <li style="list-style: none;">✅Scheduled Castes (SC) – Reserved seats available </li>
                <li style="list-style: none;">    ✅ Scheduled Tribes (ST) – Reserved seats available </li>
                <li style="list-style: none;">   ✅ Other Backward Classes (OBC) – Reserved seats available </li>
                <li style="list-style: none;">    ✅ Economically Weaker Sections (EWS) – Reserved seats available </li>
                <li style="list-style: none;">    ✅ General Merit Seats – Based on open competition </li>
                </li>
                <p style="font-style: italic;" class="mt-2">Note - Candidates must upload valid caste/category certificates during application.</p>
                <h5>Online Admission Portal Now Live!</h5>
                <p>💻 Easy Application | 📄 Digital Document Upload | 🔒 Safe & Transparent Process</p>
                @Html.ActionLink("Apply Now", "Register", "Home", new { @class = "btn btn-primary py-md-3 px-md-5 me-3 animated slideInDown" })
        
            </div>
        </div>
    </div>

    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="text-center">
                <h6 class="section-title bg-white text-center text-primary px-3">Annoucements</h6>
                <h1 class="mb-5">Our Annoucements!</h1>
            </div>
            <div class="owl-carousel testimonial-carousel position-relative">
                <div class="testimonial-item text-center">

                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">Merit List is out. Check out now!</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">

                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">Admission for Undergraduate Courses are Open!.</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">

                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">Admission for Post Graduate Courses are Open!.</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">

                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">Admissions are open from 15th May to 31st June.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial End -->
    <!-- Categories Start -->
    <div class="container-xxl py-5 category">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Categories</h6>
                <h1 class="mb-5">Courses Categories</h1>
            </div>
            <div class="row g-4 justify-content-center">
                <div class="col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light border border-primary">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="~/Template/img/ug.jpg" alt="" style="height: 300px;  width: 100%;">
                            
                        </div>
                        <div class="text-center p-4 ">
                            <h3 class="mb-0">Under Graduate Courses</h3>


                        </div>


                    </div>
                </div>
                <div class="col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light border border-primary">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="~/Template/img/pg.jpg" alt="" style="height: 300px; width: 100%;">
                            
                        </div>
                        <div class="text-center p-4 ">
                            <h3 class="mb-0">Post Graduate Courses</h3>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Categories Start -->