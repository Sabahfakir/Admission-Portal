@model AdmissionPortal.Models.AdminLogin
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-center">
    <div class="card mt-5 shadow-sm">
        <div class="card-body" style="width: 700px;">
            <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">Delete Admin</h5>
                <p class="text-center fs-3 text-danger">Are you sure you want to delete this admin?</p>
            </div>


            <hr />

            <div class="mb-3">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ID)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ID)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Username)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Password)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>


